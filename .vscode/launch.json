    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug",
            "program": "${workspaceFolder}/target/debug/${fileBasenameNoExtension}",
            "args": ["data/pxl.png"],
            "cwd": "${workspaceRoot}",
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rust-scrape'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=scorpion",
                    "--package=rust-scrape"
                ],
                "filter": {
                    "name": "rust-scrape",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFoldern}"
        }
    ]
